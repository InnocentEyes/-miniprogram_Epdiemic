/* pages/commentDetail/commentDetail.wxss */

.commentDetailContainer{
  padding: 0 20rpx;
  position: relative;
}
/* 头部 */
.commentDetailContainer .header{
  display: flex;
  padding-top: 58rpx;
  height: 120rpx;
}
.commentDetailContainer .header image{
  border-radius: 50%;
  width: 15%;
  height: 85%;
  margin:auto;
  border: 1rpx solid #ffffff;
}
.commentDetailContainer .header .headerMessage{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: auto;
  padding-left: 20rpx;
}
.commentDetailContainer .header .headerMessage .userName{
  margin-top: 10rpx;
  font-size: 38rpx;
  color: #4d4d4d;
}
.commentDetailContainer .header .headerMessage .userMessage{
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #b3b3b3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 个人评论主体 */
.commentDetailContainer .commentDetail{
  margin-top: 20rpx;
}
.commentDetailContainer .commentDetail .comment{
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 他人评论主体 */
.commentDetailContainer .otherUserCommentList{
  margin-top: 58rpx;
}
.commentDetailContainer .otherUserCommentList .title{
  color: #1a1a1a;
  font-size: 38rpx;
  font-weight: bold;
}
.commentDetailContainer .otherUserCommentList .otherScroll{
  height: calc(100vh - 563.2rpx);
}
.otherScroll .otherItem{
  position: relative;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  margin-left: 80rpx;
}
.otherScroll .otherItem:first-child{
  margin-top: 58rpx;
}
.otherScroll .otherItem image{
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  left: -80rpx;
  top: -14rpx;
}
.otherScroll .otherItem text{
  margin-bottom: 20rpx;
}
.otherScroll .otherItem .otherUserName{
  font-weight: bold;
  font-size: 28rpx;
}
.otherScroll .otherItem .otherUserComment{
  font-size: 32rpx;
  color: #4d4d4d;
}
.otherScroll .otherItem .curentTime{
  font-size: 24rpx;
  color: #999999;
}
.commentDetailContainer .footer{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  background-color: #ffffff;
}
.commentDetailContainer .footer .sendComment{
  position: relative;
  width: 100%;
  height: 100%;
  padding-right: 150rpx;
}
.commentDetailContainer .footer .sendComment input{
  width: 100%;
  height: 100%;
  line-height: 100rpx;
}
.commentDetailContainer .footer .sendComment .commentIcon{
  position: absolute;
  top: 30rpx;
  right: 60rpx;
  font-size: 48rpx;
  color: #846bff;
}


