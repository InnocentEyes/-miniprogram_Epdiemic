      class="navScroll" 
      scroll-x="true"
      scroll-into-view="{{'scroll'+navId}}"
      scroll-with-animation="true">
        <view 
        class="navItem" 
        wx:for="{{commentList}}" 
        wx:key="id"
        id="{{ 'scroll'+item.id }}">
          <view id="{{item.id}}" class="navContent {{ (navId == item.id) ? 'active' : '' }}" bindtap="changeNav">
            {{item.title}}
          </view>
        </view>
      </scroll-view>
