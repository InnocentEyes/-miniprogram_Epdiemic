<view class="commentContainer">
  <!-- 头部:搜索框 -->
  <view class="header">
    <text class="title">发现</text>
    <view class="search">
      <input type="text" placeholder="查询省市疫情数据" placeholder-class="placeholder" bindtap="toSearch"/>
      <text class="iconfont icon-chazhao searchIcon"></text>
    </view>
  </view>
  <view class="comment">
