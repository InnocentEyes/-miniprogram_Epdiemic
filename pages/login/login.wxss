/* pages/login/login.wxss */
.header{
  height: 150rpx;
  padding: 30rpx;
  font-size: 60rpx;
  color: #333;
  line-height: 150rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.login{
  width: 100%;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login .Input-Item{
  display: flex;
  width: 95%;
  margin-bottom: 50rpx;
  border: 1rpx solid #cdcdcd;
  border-radius: 10rpx;
}
.login .Input-Item:last-child{
  margin-bottom: 0;
}
.login .Input-Item .title{
  height: 120rpx;
  width: 120rpx;
  font-size: 50rpx;
  text-align: center;
  line-height: 120rpx;
}
.login .Input-Item input{
  height: 120rpx;
  flex:1;
}
.login .checkbox{
  margin: 40rpx 0 ;
  font-size: 30rpx;
  color: #333;
}

.login .checkbox text{
  color: #4399fc;
}

.login .btn{
  width: 630rpx!important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
}

.footer{
  position:absolute;
  left: 0;
  bottom: 50rpx;
  width: 100%;
  font-size: 28rpx;
  color: #606266;
  text-align: center;
}
.footer text{
  color: #4399fc;
  margin-left: 10rpx;
}

